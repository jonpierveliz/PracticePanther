<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracticePanther.MAUI.MainPage">
    
    <!-- Layout components -->
    <ScrollView>
        <VerticalStackLayout VerticalOptions="CenterAndExpand">
            <!-- Button for managing clients and projects -->
            <Button Text="Manage Clients and Projects" Clicked="ClientClicked" BackgroundColor="Blue"/>
            <!-- Button for managing employees -->
            <Button Text="Manage Employees" Clicked="EmployeeClicked" BackgroundColor="Blue"></Button>
            <!-- Button for entering time -->
            <Button Text="Enter Time" Clicked="TimeClicked" BackgroundColor="Blue"></Button>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
